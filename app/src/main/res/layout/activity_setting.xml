<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamvh.orbital.athena.SettingActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_RL1">

        <TextView
            android:id="@+id/setting_RL1_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Functions"
            style="@style/ThickText"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/setting_trackTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Interval"
            style="@style/ThickText"
            android:paddingBottom="10dp"
            android:layout_below="@id/setting_RL1_header"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/setting_trackTV">

            <SeekBar
                android:id="@+id/setting_trackSB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="55"
                android:layout_weight="9"
                android:paddingTop="2dp"/>

            <TextView
                android:id="@+id/setting_trackSBTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                style="@style/ThickText"
                android:paddingBottom="10dp"
                android:layout_weight="1"/>

        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/setting_RL1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/setting_seperator1"/>

    <RelativeLayout
        android:id="@+id/setting_RL2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_seperator1">

        <TextView
            android:id="@+id/setting_RL2_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert Mode"
            style="@style/ThickText"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/setting_alertTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Interval"
            style="@style/ThickText"
            android:paddingBottom="10dp"
            android:layout_below="@id/setting_RL2_header"/>

        <SeekBar
            android:id="@+id/setting_alertSB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_alertTV"
            android:paddingBottom="10dp"
            android:max="5"
            android:progress="1"/>

        <TextView
            android:id="@+id/setting_alertCDTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prompt Timer"
            style="@style/ThickText"
            android:paddingBottom="10dp"
            android:layout_below="@id/setting_alertSB"/>

        <SeekBar
            android:id="@+id/setting_alertCDSB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_alertCDTV"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/setting_RL2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/setting_seperator2"/>

    <RelativeLayout
        android:id="@+id/setting_RL3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_seperator2">

        <TextView
            android:id="@+id/setting_RL3_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency"
            style="@style/ThickText"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/setting_emTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Interval"
            style="@style/ThickText"
            android:paddingBottom="10dp"
            android:layout_below="@id/setting_RL3_header"/>

        <SeekBar
            android:id="@+id/setting_emSB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_emTV"
            android:paddingBottom="10dp"
            android:max="60"
            android:progress="5"/>

        <TextView
            android:id="@+id/setting_emPassTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passcode"
            style="@style/ThickText"
            android:paddingBottom="10dp"
            android:layout_below="@id/setting_emSB"/>
    </RelativeLayout>

</RelativeLayout>
